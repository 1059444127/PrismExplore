<Window x:Class="EventAggregationExplore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentControl Content="{Binding Source={StaticResource Locator}, Path=Subject}"></ContentControl>
        <ContentControl Content="{Binding Source={StaticResource Locator}, Path=Observer}" Grid.Column="1"></ContentControl>
    </Grid>
</Window>